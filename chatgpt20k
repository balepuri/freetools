        </div>

        <!-- Button to Reveal Code Entry -->
        <button class="button" style="background-color: orange;" onclick="showCodeInput()">Get It</button>

        <!-- Code Entry Section (Hidden Initially) -->
        <div class="hidden" id="codeContainer">
            <p>Isi code yang ada di akhir Google Form</p>
            <input type="text" id="codeInput" class="code-input" placeholder="Enter code here">
            <button id="submitCodeBtn" class="submit-code-button" onclick="validateCode()">Submit</button>
            <p id="errorMessage" class="error-message">Incorrect code. Please try again.</p>
        </div>
    </div>

    <script>
        function redirectToURL() {
            window.location.href = "https://example.com"; // Change to your actual URL
        }

        function showCodeInput() {
            document.getElementById("codeContainer").classList.remove("hidden");
        }

        function validateCode() {
            let inputCode = document.getElementById("codeInput").value.trim().toLowerCase();
            let correctCode = "yourcode"; // Change to actual code
            let errorMessage = document.getElementById("errorMessage");

            if (inputCode === correctCode) {
                window.location.href = "https://yourdestination.com"; // Change to correct destination URL
            } else {
                errorMessage.style.display = "block"; // Show error message
            }
        }

        document.getElementById("codeInput").addEventListener("input", function() {
            let inputCode = document.getElementById("codeInput").value.trim().toLowerCase();
            let submitBtn = document.getElementById("submitCodeBtn");

            if (inputCode.length > 0) {
                submitBtn.style.display = "inline-block"; // Show button when user starts typing
            } else {
                submitBtn.style.display = "none"; // Hide button if input is empty
            }
        });
    </script>

